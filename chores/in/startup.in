#!/bin/sh

daemons="@DAEMONS@"
app_name="@APP_NAME@"
pkg_name="@PKG_NAME@"
pkg_path="@APP_ROOT_DIR@/$pkg_name"
case "$1" in
  start)
    echo "Starting $app_name..."
    cd "$pkg_path" || exit 1
    nohup ./bin/"$daemons" > /dev/null 2>&1 &
    ;;
  stop)
    echo "Stopping $app_name..."
    killall -9 "$daemons" > /dev/null 2>&1
    killall -9 "$app_name" > /dev/null 2>&1
    sleep 1
    ;;
  restart)
    "$0" stop
    sleep 1
    "$0" start
    ;;
  *)
    echo "Usage: $0 [start|stop|restart]"
    exit 1
esac
